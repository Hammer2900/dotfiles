#!/bin/bash
lred='\e[1;31m'
yellow='\e[1;33m'
noco='\e[0m'
function pause(){
	enter=$(echo -e "${yellow}Press any key to begin...${noco}")
	if [ "$1" = "shot" ]; then
		scrot
	fi
	read -p "$enter" config
}
if [ ! "$1" = "skip" ]; then
	echo -e "${lred}================================================================================"
	echo -e "${lred}=                             Welcome ${yellow}$USER@$HOSTNAME${lred}!                        ="
	echo -e "${lred}================================================================================"
	archey
	if [ "$1" = "shot" ]; then
		pause "$1"
	else
		pause
	fi
	clear
fi
