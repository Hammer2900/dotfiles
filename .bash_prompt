#!/bin/bash

function parse_git_branch {
  git branch --no-color 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/(\1)/'
}

if [ "$(whoami)" == "root" ]; then
	PS1="\[\033[01;33m\]\u@\h {\[\033[01;31m\]\w\$(parse_git_branch)\[\033[01;33m\]} \[\033[01;31m\]#\[\033[00m\] "
else
	PS1="\[\033[01;33m\]\u@\h {\[\033[01;31m\]\w\$(parse_git_branch)\[\033[01;33m\]} \[\033[01;31m\]\$\[\033[00m\] "
fi
